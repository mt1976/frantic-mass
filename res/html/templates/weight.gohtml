<!DOCTYPE html>
<html lang="en">

   {{template "head" .}}


    <body>
            <form action="/weight/{{.ID}}" method="POST" id="userForm" class="form">
                {{template "handleform" .}}
            {{template "breadcrumbs" .}}
            <article>
                <hgroup>
                    <h2>Weight Information:</h2>
                </hgroup>
                    


    
                <div class="form-group">
                    <label for="bmiWeightInput">Weight (kg):</label>
                    <input type="number" id="bmiWeightInput" name="bmiWeightInput" value="{{.Weight.KGs}}" step="0.1" required>
                </div>

                <div class="form-group">
                    <label for="dateControl">Recorded On:</label>
                    <input type="date" id="dateControl" name="dateControl" value="{{.DateControl}}" required>
                     <small>{{.Date}}</small>
                </div>

                <input type="text" id="bmiUserId" name="bmiUserId" value="100" hidden/>

                <div class="form-group">
                   
                    
                    <label for="BMI">BMI: <span id="bmiGlyph" style="padding-left: 10px;"> {{.BMI.Glyph}}</span></label>
                    <input type="number" id="bmiValue" name="bmiValue" value="{{.BMI.External}}" step="0.1" readonly>
                    <input type="text" id="bmiEnrichment" name="bmiEnrichment" value="{{.BMI.Description}}"  readonly>


                </div>
                <div class="form-group">
                    <label for="note">Note:</label>
                    <textarea id="note" name="note">{{.Note}}</textarea>
                </div>
   
