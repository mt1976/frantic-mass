<!DOCTYPE html>
<html lang="en">

   {{template "head" .}}


    <body style="{{template "bodyStyle" .}}">
            <form action="/weight/{{.ID}}" method="POST" id="userForm" class="form">

            <hgroup>
                <h1>{{.Context.AppName}}</h1>
                <p>{{.Context.PageTitle}} {{.Context.Delimiter}} {{.UserName}} {{.Context.Delimiter}} ???</p>
            </hgroup>
            {{template "breadcrumbs" .}}
            <article>
                <hgroup>
                    <h2>Weight Information:</h2>
                </hgroup>
                    


    
                <div class="form-group">
                    <label for="weight">Weight (kg):</label>
                    <input type="number" id="weight" name="weight" value="{{.Weight.KGs}}" step="0.1" required>
                </div>

                <div class="form-group">
                    <label for="dateControl">Recorded On:</label>
                    <input type="date" id="dateControl" name="dateControl" value="{{.DateControl}}" required>
                     <small>{{.Date}}</small>
                </div>

                <div class="form-group">
                    <label for="bmi">BMI:</label>
                    <input type="number" id="bmi" name="bmi" value="{{.BMI.BMI}}" step="0.1" required>
                    <small>{{.BMI.Description}} {{.BMI.Glyph}}</small>
                </div>
                <div class="form-group">
                    <label for="note">Note:</label>
                    <textarea id="note" name="note">{{.Note}}</textarea>
                </div>
   
